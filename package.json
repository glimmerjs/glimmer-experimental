{
  "name": "glimmerx",
  "version": "0.1.0",
  "description": "Lightweight runtime for Glimmer components",
  "main": "dist/index.js",
  "repository": "https://github.com/tomdale/glimmer-lite",
  "author": "Tom Dale <tom@tomdale.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "scripts/build.js",
    "format": "prettier --write 'packages/**/*.{js,ts}'",
    "prepublishOnly": "scripts/build.js",
    "start": "webpack-dev-server",
    "test": "testem ci && yarn test:node",
    "test:watch": "testem",
    "test:node": "mocha -r esm --timeout 5000 packages/@glimmerx/babel-plugin-component-templates/test packages/@glimmerx/eslint-plugin/test/lib/rules"
  },
  "workspaces": [
    "packages/*",
    "packages/@glimmerx/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/qunit": "^2.9.0",
    "babel-loader": "^8.0.6",
    "fs-extra": "^8.1.0",
    "lerna": "^3.15.0",
    "prettier": "^1.18.2",
    "qunit": "^2.9.2",
    "testem": "^2.16.0",
    "ts-loader": "^6.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "~3.2.4",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1"
  },
  "volta": {
    "node": "12.10.0"
  }
}
